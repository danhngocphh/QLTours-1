@model IEnumerable<QLTours.Models.chitietTour>

@{
    ViewBag.Title = "Index";
}

<h2><p>Danh sách chi tiết tour</p></h2>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th width="3%" align="left">
            STT
        </th>
        <th width="10%" align="left">
            Thành phố
        </th>
        <th width="20%" align="left">
            Tên chi tiết tour
        </th>
        <th width="10%" align="left">
            Số thứ tự địa điểm
        </th>
        <th width="17%" align="left"></th>
    </tr>
@{ int counter = 0;}
@foreach (var item in Model) {
    <tr>
        <td>
            @(++counter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.diadiem.ThanhPho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tour.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.STTDiaDiem)
        </td>
        <td>
            <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
        </td>
    </tr>
}

</table>
