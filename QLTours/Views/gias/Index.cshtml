@model IEnumerable<QLTours.Models.gia>

@{
    ViewBag.Title = "Index";
}

<p>

    <h2>Giá</h2>

</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th width="3%" align="left">
            STT
        </th>
        <th width="17%" align="left">
            Tên giá
        </th>
        <th width="17%" align="left">
            Số tiền (Đồng)
        </th>
        <th width="7%" align="left">
            Từ ngày
        </th>
        <th width="7%" align="left">
            Đến ngày
        </th>
        <th width="17%" align="left"></th>
    </tr>
@{ int counter = 0;}
@foreach (var item in Model) {
    <tr>
        <td>
            @(++counter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.tour.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SoTien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TuNgay)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DenNgay)
        </td>
        <td>
            <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
        </td>
    </tr>
}

</table>
