@model IEnumerable<QLTours.Models.loai>

@{
    ViewBag.Title = "Index";
}

<h2>Loại</h2>

<p>
    <h3 class="iop">
        <button class="btn btn-warning" style="width: 200px"> @Html.ActionLink("Thêm mới loại tour", "Create") </button>
    </h3>

</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            STT
        </th>
        <th>
            Tên loại
        </th>
        <th>
            Mô tả
        </th>
        <th></th>
    </tr>
@{int counter = 0; }
@foreach (var item in Model) {
    <tr>
        <td>
            @(++counter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
        </td>
    </tr>
}

</table>
