@model IEnumerable<QLTours.Models.AspNetUser>

@{
    ViewBag.Title = "Index";
}

<h2> Danh sách nhân viên</h2>

<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            STT
        </th>
        <th>
            Email
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Tên tài khoản
        </th>
        <th>
            Tên nhân viên
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Nhiệm vụ
        </th>
        <th></th>
    </tr>
@{int counter = 0; }
@foreach (var item in Model) {
    <tr>
        <td>
            @(++counter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.PhoneNumber)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UserName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.TenNhanVien)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NhiemVu)
        </td>
        <td>
            <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
</tr>
}

</table>
