@model IEnumerable<QLTours.Models.tour>

@{
    ViewBag.Title = "Index";
}


<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h2>Danh sách Tour</h2>

            <p>
                <h3 class="iop">
                    <button class="btn btn-warning" style="width: 200px"> @Html.ActionLink("Thêm mới tour", "Create") </button>
                </h3>

            </p>
        </div>
        <!-- /.panel-heading -->
        <div class="panel-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered table-hover" id="dataTables-example">
                    <thead>
                        <tr>
                            <th width="3%" align="left">STT</th>
                            <th width="10%" align="left">Tên tour</th>
                            <th width="10%" align="left">Loại tour</th>
                            <th width="8%" align="left">Giá tour</th>
                            <th width="20%" align="left">Mô tả</th>
                            <th width="35%" align="left">Chức năng</th>
                        </tr>
                    </thead>
                    <tbody>
                        @{ int counter = 0;}
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @(++counter)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.loai.Ten)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.gia.SoTien)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.MoTa)
                                </td>
                                <td>

                                    <button class="btn btn-info">  @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.Id }) </button>
                                    <button class="btn btn-info">
                                        @Html.ActionLink("Thêm giá", "Create", "gias", new { id = item.Id }, null)
                                    </button>
                                    
                                        <button class="btn btn-info">  @Html.ActionLink("Thêm đoàn", "Create", "doans", new { id = item.Id }, null)
                                        </button>
                                      
                                            <button class="btn btn-info"> @Html.ActionLink("Thêm chi tiết tour", "Create", "chitietTours", new { id = item.Id }, null)</button>
                                            
</td>
                            </tr>
                        }
                        
                    </tbody>
                </table>
            </div>
            <!-- /.table-responsive -->
        </div>
        <!-- /.panel-body -->
    </div>
    <!-- /.panel -->
</div>

