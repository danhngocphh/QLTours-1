@model IEnumerable<QLTours.Models.diadiem>

@{
    ViewBag.Title = "Index";
}

<h2>Địa điểm</h2>

<p>
    <h3 class="iop">
        <button class="btn btn-warning" style="width: 200px"> @Html.ActionLink("Thêm địa điểm", "Create") </button>
    </h3>

</p>
<table class="table table-striped table-bordered table-hover" id="dataTables-example">
    <tr>
        <th width="3%" align="left">
            STT
        </th>
        <th width="10%" align="left">
            Thành phố
        </th>
        <th width="10%" align="left">
            Tên địa điểm
        </th>
        <th width="35%" align="left">
            Mô tả
        </th>
        <th width="15%" align="left"></th>
    </tr>
@{int counter = 0; }
@foreach (var item in Model) {
    <tr>
        <td>
            @(++counter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ThanhPho)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MoTa)
        </td>
        <td>
            <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
        </td>
    </tr>
}

</table>
