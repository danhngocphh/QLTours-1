@model IEnumerable<QLTours.Models.chiphi>

@{
    ViewBag.Title = "Index";
}

<h2>Chi phí</h2>

<p>
    <h3 class="iop">
        <button class="btn btn-warning" style="width: 200px"> @Html.ActionLink("Thêm chi phí", "Create") </button>
    </h3>

</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th width="3%" align="left">
            STT
        </th>
        <th width="25%" align="left">
            Tên đoàn
        </th>
        <th width="7%" align="left">
            Tên loại chi phí
        </th>
        <th width="15%" align="left">
            Tổng tiền
        </th>
        <th width="20%" align="left">
            Chi tiết
        </th>
        <th width="25%" align="left"></th>
    </tr>
@{int counter = 0; }
@foreach (var item in Model) {
    <tr>
        <td>
            @(++counter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.doan.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.loaichiphi.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ChiTiet)
        </td>
        <td>
            <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
            <button class="btn btn-info" > @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
        </td>
    </tr>
}

</table>
