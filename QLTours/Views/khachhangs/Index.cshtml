@model IEnumerable<QLTours.Models.khachhang>

@{
    ViewBag.Title = "Index";
}

<h2> Dánh sách khách hàng</h2>

<p>
    <h3 class="iop">
        <button class="btn btn-warning" style="width: 200px"> @Html.ActionLink("Thêm mới khách hàng", "Create") </button>
    </h3>

</p>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>
            STT
        </th>
        <th>
            Tên khách hàng
        </th>
        <th>
            Số điện thoại
        </th>
        <th>
            Ngày sinh
        </th>
        <th>
            Email
        </th>
        <th>
            CMND
        </th>
        <th></th>
    </tr>
@{ int counter = 0;}
@foreach (var item in Model) {
    <tr>
        <td>
            @(++counter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Ten)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SDT)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.NgaySinh)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CMND)
        </td>
        <td>
            <button class="btn btn-info"> @Html.ActionLink("Edit", "Edit", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Details", "Details", new { id = item.Id }) </button>
            <button class="btn btn-info"> @Html.ActionLink("Delete", "Delete", new { id = item.Id }) </button>
        </td>
    </tr>
}

</table>
