<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="">
    <meta name="author" content="">

    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/bootstrap.min.css")
    @Styles.Render("~/Content/metisMenu.min.css")
    @Styles.Render("~/Content/timeline.css")
    @Styles.Render("~/Content/startmin.css")
    @Styles.Render("~/Content/morris.css")
    @Styles.Render("~/Content/font-awesome.min.css")


    <asp:ContentPlaceHolder ID="Stylesheets" runat="server">
        <link rel="stylesheet" href="css/bootstrap.min.css" type="text/css" />
        <link rel="stylesheet" href="css/metisMenu.min.css" type="text/css" />
        <link rel="stylesheet" href="css/timeline.css" type="text/css" />
        <link rel="stylesheet" href="css/startmin.css" type="text/css" />
        <link rel="stylesheet" href="css/morris.css" type="text/css" />
        <link rel="stylesheet" href="css/font-awesome.min.css" type="text/css" />

    </asp:ContentPlaceHolder>
</head>

<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                    <li>@Html.ActionLink("Tours", "Index", "tours")</li>
                    <li>@Html.ActionLink("Chi tiết tour", "Index", "chitiettours")</li>
                    <li>@Html.ActionLink("Địa điểm", "Index", "diadiems")</li>
                    <li>@Html.ActionLink("Giá", "Index", "gias")</li>
                    <li>@Html.ActionLink("Chi phí tour", "Index", "chiphis")</li>
                    <li>@Html.ActionLink("Loại tour", "Index", "loais")</li>
                    <li>@Html.ActionLink("Đoàn", "Index", "doans")</li>
                    <li>@Html.ActionLink("Khách hàng", "Index", "khachhangs")</li>
                    <li>@Html.ActionLink("Nhân viên", "Index", "nhanviens")</li>

                    <li>@Html.ActionLink("Loại chi phí", "Index", "loaichiphis")</li>
                    <li>@Html.ActionLink("Người đi", "Index", "nguoidis")</li>

                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>
    <div id="page-wrapper">
        <div class="container-fluid">
            <div class="row">
                <div class="col-lg-12">
                    @RenderBody()
                </div>
            </div>
            <!-- ... Your content goes here ... -->
        </div>
    </div>

    <div id="wrapper">

        <!-- Navigation -->
        <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
            <div class="navbar-header">
                <a class="navbar-brand" href="#">QLTourDuLich</a>
            </div>

            <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                <span class="sr-only">Toggle navigation</span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
                <span class="icon-bar"></span>
            </button>



            <!-- Top Navigation: Right Menu -->
            <ul class="nav navbar-right navbar-top-links">
                @Html.Partial("_LoginPartial")
            </ul>

            <!-- Sidebar -->
            <div class="navbar-default sidebar" role="navigation">
                <div class="sidebar-nav navbar-collapse">

                    <ul class="nav" id="side-menu">

                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>
                            @Html.ActionLink("Tours", "Index", "tours")
                            <ul class="nav nav-second-level">
                                <li>@Html.ActionLink("Tours", "Index", "tours")</li>
                                <li>@Html.ActionLink("Giá", "Index", "gias")</li>
                                <li>@Html.ActionLink("Loại tour", "Index", "loais")</li>
                                <li>@Html.ActionLink("Chi tiết tour", "Index", "chitiettours")</li>
                                <li>@Html.ActionLink("Chi phí tour", "Index", "chiphis")</li>
                                <li>@Html.ActionLink("Loại chi phí", "Index", "loaichiphis")</li>

                            </ul>
                        </li>

                        <li>@Html.ActionLink("Đoàn", "Index", "doans")</li>
                        <li>@Html.ActionLink("Địa điểm", "Index", "diadiems")</li>





                        <li>@Html.ActionLink("Khách hàng", "Index", "khachhangs")</li>
                        <li>@Html.ActionLink("Nhân viên", "Index", "nhanviens")</li>

                        <li>@Html.ActionLink("Người đi", "Index", "nguoidis")</li>
                        <li>
                            @Html.ActionLink("Thống kê", "Index", "thongkes")
                            <ul class="nav nav-second-level">
                                <li>@Html.ActionLink("Thống kê theo đoàn", "Index", "thongkes")</li>
                                <li>@Html.ActionLink("Thống kê theo tour", "Details", "thongkes")</li>

                            </ul>
                        </li>
                        

                    </ul>

                </div>
            </div>
        </nav>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)


</body>
<script src="js/jquery.min.js"></script>
<!-- Bootstrap Core JavaScript -->
<script src="js/bootstrap.min.js"></script>
<!-- Metis Menu Plugin JavaScript -->
<script src="js/metisMenu.min.js"></script>
<!-- Custom Theme JavaScript -->
<script src="js/startmin.js"></script>
</html>

    